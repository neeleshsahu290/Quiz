<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorfragmentlistbackground"
    android:padding="2dp"
    tools:context=".fragment_home.GeneralScienceFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorfragmentlistbackground"
        android:layout_margin="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.4"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrient Sources and their Deficiency diseases"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#505050"
                    android:padding="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="43dp"
                    android:id="@+id/txtnutrientsourcelist"
                    android:text="List"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/home_activity_button"
                    android:textColor="@color/colorblack"
                    android:elevation="5dp"
                    android:padding="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="43dp"
                    android:id="@+id/txtnutrientsourceQuiz"
                    android:text="Quiz"
                    android:layout_margin="10dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/home_activity_button"
                    android:textColor="@color/colorblack"
                    android:elevation="5dp"
                    android:padding="5dp"

                    />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView
        >

   </LinearLayout>
</ScrollView>
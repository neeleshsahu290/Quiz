                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/home_activity_button"
                        android:textColor="@color/colorblack"
                        android:elevation="5dp"
                        android:padding="5dp"

                        />
                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

